{% extends 'base.html.twig' %}

{% block title %}Assets{% endblock %}

{% block body %}
<div class="bg-default d-flex align-items-center">
    <div class="container">
        <h1>Assets</h1>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Ticker</th>
                    <th>Company</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                {% for asset in assets %}
                    <tr>
                        <td>
                            {{ asset.ticker }}
                        </td>
                        <td>{{ asset.company }}</td>
                        <td>{{ asset.type }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
