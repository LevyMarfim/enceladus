{% extends 'base.html.twig' %}

{% block title %}Assets{% endblock %}

{% block body %}
<div class="bg-default d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col text-center">
                <a href="{{ path('app_list_asset') }}" class="text-decoration-none text-reset">
                    <twig:ux:icon name="lucide:list" class="icon"/>
                    <h2>Listar Contas</h2>
                </a>
            </div>
            <div class="col text-center">
                <a href="{{ path('app_add_asset') }}" class="text-decoration-none text-reset">
                    <twig:ux:icon name="streamline-ultimate:bill-cross" class="icon"/>
                    <h2>Adicionar conta</h2>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
