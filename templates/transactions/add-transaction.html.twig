{% extends 'base.html.twig' %}

{% block title %}Transactions{% endblock %}

{% block body %}
<div class="bg-default d-flex align-items-center">
    <div class="container">
        <h1>Adicionar movimentação</h1>
        <p>Adicione uma movimentação.</p>
        <div class="mt-5">
            {{ form_start(form) }}
                {{ form_errors(form) }}
                {# row 1/2 #}
                <div class="row">
                    {# col 1/2 #}
                    <div class="col">
                        {# Settlement #}
                        <div class="row mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.settlement) }}</span>
                                    {{ form_widget(form.settlement) }}
                                </div>
                            </div>
                        </div>
                        {# Transaction #}
                        <div class="row mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.transaction) }}</span>
                                    {{ form_widget(form.transaction) }}
                                </div>
                            </div>
                        </div>
                        {# Operation #}
                        <div class="row mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.operation) }}</span>
                                    {{ form_widget(form.operation) }}
                                </div>
                            </div>
                        </div>
                        {# Type #}
                        <div class="row mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.type) }}</span>
                                    {{ form_widget(form.type) }}
                                </div>
                            </div>
                        </div>
                        {# entry #}
                        <div class="row mb-3">
                            <div class="col-12 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-2">{{ form_label(form.entry) }}</span>
                                    {{ form_widget(form.entry) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {# col 2/2 #}
                    <div class="col">
                        {# Value #}
                        <div class="row align-items-center mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.value) }}</span>
                                    <span class="input-group-text">R$</span>
                                    {{ form_widget(form.value) }}
                                </div>
                            </div>
                        </div>
                        {# Invoice #}
                        <div class="row align-items-center mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.invoice) }}</span>
                                    <span class="input-group-text">NF</span>
                                    {{ form_widget(form.invoice) }}
                                </div>
                            </div>
                        </div>
                        {# Amount #}
                        <div class="row align-items-center mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.amount) }}</span>
                                    <span class="input-group-text">un</span>
                                    {{ form_widget(form.amount) }}
                                </div>
                            </div>
                        </div>
                        {# Ticker #}
                        <div class="row align-items-center mb-3">
                            <div class="col-5 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-5">{{ form_label(form.ticker) }}</span>
                                    {{ form_widget(form.ticker) }}
                                </div>
                            </div>
                        </div>
                        {# comment #}
                        <div class="row align-items-center mb-3">
                            <div class="col-12 pe-0">
                                <div class="input-group">
                                    <span class="input-group-text col-2">{{ form_label(form.comment) }}</span>
                                    {{ form_widget(form.comment) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {# row 2/2 #}
                <div class="row mt-3">
                    <div class="col-3">
                        {{ form_widget(form.adicionar) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
