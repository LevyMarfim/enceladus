{% extends 'base.html.twig' %}

{% block title %}Assets{% endblock %}

{% block body %}
<div class="bg-default d-flex align-items-center">
    <div class="container">
        <h1>Adicionar asset</h1>
        <p>Adicione uma empresa que negocia alguma ação, FII, ETF, etc.</p>
        <div class="mt-5">
            {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row mb-3">
                    <div class="col-3">
                        {{ form_label(form.ticker) }}
                        {{ form_widget(form.ticker) }}
                    </div>
                    <div class="col-3">
                        {{ form_label(form.company) }}
                        {{ form_widget(form.company) }}
                    </div>
                    <div class="col-3">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.adicionar) }}
                    </div>
                </div>
                {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
