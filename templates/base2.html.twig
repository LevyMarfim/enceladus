{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en" data-bs-theme="{{ app.request.cookies.get('theme')|default('auto') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}My App{% endblock %}</title>
    
    {# Theme detection script - must be in head #}
    <script>
        // Initialize theme before page renders
        (function() {
            const savedTheme = localStorage.getItem('theme');
            const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            
            if (savedTheme) {
                // Use saved theme if exists
                document.documentElement.setAttribute('data-bs-theme', savedTheme);
            } else {
                // Otherwise use system preference
                document.documentElement.setAttribute('data-bs-theme', systemDark ? 'dark' : 'light');
            }
        })();
    </script>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    {# Custom CSS #}
    <style>
        :root {
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
            --transition-speed: 0.3s;
        }
        
        .sidebar {
            height: 100vh;
            position: fixed;
            width: var(--sidebar-width);
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            border-right: 1px solid var(--bs-border-color);
            padding: 20px;
            transition: all var(--transition-speed);
            z-index: 1000;
        }
        
        .sidebar.collapsed {
            width: var(--sidebar-collapsed-width);
        }
        
        .sidebar.collapsed .sidebar-text,
        .sidebar.collapsed .dropdown-toggle::after {
            display: none;
        }
        
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 20px;
            transition: all var(--transition-speed);
            min-height: 100vh;
        }
        
        .main-content.collapsed {
            margin-left: var(--sidebar-collapsed-width);
        }
        
        .nav-link {
            color: var(--bs-body-color);
            border-radius: var(--bs-border-radius);
            padding: 0.5rem 1rem;
            margin-bottom: 0.25rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .nav-link:hover,
        .nav-link.active {
            background-color: var(--bs-tertiary-bg);
            color: var(--bs-emphasis-color);
        }
        
        @media (max-width: 992px) {
            .sidebar {
                margin-left: calc(-1 * var(--sidebar-width));
            }
            
            .sidebar.active {
                margin-left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .main-content.active {
                margin-left: var(--sidebar-width);
            }
        }
    </style>
    
    {{ importmap('app') }}
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar" 
             data-controller="sidebar"
             data-sidebar-collapsed-class="collapsed">
             
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="sidebar-text mb-0">My App</h3>
                <div>
                    <button class="btn btn-sm btn-outline-secondary me-2" 
                            data-controller="theme"
                            data-action="theme#toggle">
                        <i class="bi" data-theme-target="icon"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" 
                            data-action="sidebar#toggle">
                        <i class="bi bi-chevron-left" data-sidebar-target="toggleIcon"></i>
                    </button>
                </div>
            </div>
            
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="{{ path('app_home') }}" class="nav-link">
                        <i class="bi bi-house"></i>
                        <span class="sidebar-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_transactions') }}" class="nav-link">
                        <i class="bi bi-person"></i>
                        <span class="sidebar-text">Profile</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_asset') }}" class="nav-link">
                        <i class="bi bi-box-seam"></i>
                        <span class="sidebar-text">Products</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_settings') }}" class="nav-link">
                        <i class="bi bi-gear"></i>
                        <span class="sidebar-text">Settings</span>
                    </a>
                </li>
            </ul>
            
            <div class="mt-auto pt-3 border-top border-secondary-subtle">
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" 
                       data-bs-toggle="dropdown">
                        <img src="{{ asset('images/avatar.png') }}" alt="User" width="32" height="32" class="rounded-circle me-2">
                        <strong class="sidebar-text">John Doe</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><a class="dropdown-item" href="{{ path('app_asset') }}">Profile</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_settings') }}">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Main Content -->
        <div class="main-content" data-sidebar-target="content">
            <button class="btn btn-primary d-lg-none mb-3" 
                    data-action="sidebar#toggleMobile">
                <i class="bi bi-list"></i> Menu
            </button>
            
            {% block body %}{% endblock %}
        </div>
    </div>
    
    {# Bootstrap JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>