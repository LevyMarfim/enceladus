{% extends 'base.html.twig' %}

{% block title %}Empresas{% endblock %}

{% block body %}
<div class="d-flex align-items-center">
    <div class="container">
        <h1>Empresas</h1>
        
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Setor</th>
                </tr>
            </thead>
            <tbody>
                {% for company in companies %}
                    <tr>
                        <td>{{ company.id }}</td>
                        <td>{{ company.name }}</td>
                        <td>{{ company.sector.getSector }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
